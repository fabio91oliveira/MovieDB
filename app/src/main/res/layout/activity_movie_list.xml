<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".feature.movielist.ui.MovieListActivity">
	
	<androidx.appcompat.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="0dp"
			android:layout_height="56dp"
			android:background="@color/colorPrimary"
			android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintLeft_toLeftOf="parent"/>
	
	<View android:id="@+id/viewSpan"
		  android:layout_width="@dimen/margin_six"
		  android:layout_height="@dimen/margin_twenty_four"
		  android:background="@color/colorPrimaryDark"
		  app:layout_constraintTop_toBottomOf="@+id/toolbar"
		  app:layout_constraintStart_toStartOf="parent"
		  android:layout_marginTop="@dimen/margin_four"
		  android:layout_marginStart="@dimen/margin_four"
		  android:layout_marginLeft="@dimen/margin_four"/>
	
	<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/txtMainTitle"
			android:layout_width="wrap_content"
			android:layout_height="0dp"
			app:layout_constraintBottom_toBottomOf="@+id/viewSpan"
			app:layout_constraintStart_toEndOf="@id/viewSpan"
			android:text="@string/movie_list_main_title"
			android:layout_marginStart="@dimen/margin_four"
			android:layout_marginLeft="@dimen/margin_four"
			android:textSize="@dimen/text_eighteen"/>
	
	<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/rvList"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_marginTop="@dimen/margin_six"
			app:layout_constraintTop_toBottomOf="@id/viewSpan"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			tools:listitem="@layout/item_movie"
			tools:itemCount="10"
			tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
			tools:spanCount="2"/>

</androidx.constraintlayout.widget.ConstraintLayout>